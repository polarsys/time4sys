<?xml version="1.0" encoding="UTF-8"?>
<project name="core dependencies build" default="build" basedir=".">
	<target name="build">
		<echo>Deleting previous Analysis repository dependencies update site...</echo>
		<delete>
			<fileset dir="site" />
		</delete>
		<echo>Building Analysis repository dependencies update site...</echo>
		<p2.publish.featuresAndBundles repository="file:${basedir}/site/" repositoryName="Analysis Repository Dependencies" append="false" compress="true" source="${basedir}/exported_site/">
		</p2.publish.featuresAndBundles>
		<echo>Done</echo>
	</target>
</project>
