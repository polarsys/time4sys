<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.polarsys.time4sys.arinc653.editor.commands.category"
            name="Arinc653">
      </category>
      <command
            categoryId="org.polarsys.time4sys.arinc653.editor.commands.category"
            id="org.polarsys.time4sys.arinc653.editor.commands.AddPartitionCommand"
            name="Add Partition">
      </command>
      <command
            categoryId="org.polarsys.time4sys.arinc653.editor.commands.category"
            id="org.polarsys.time4sys.arinc653.editor.commands.AddPlatformCommand"
            name="Add Arinc653 Platform">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.polarsys.time4sys.arinc653.editor.handlers.AddPartitionHandler"
            commandId="org.polarsys.time4sys.arinc653.editor.commands.AddPartitionCommand">
      </handler>
      <handler
            class="org.polarsys.time4sys.arinc653.editor.handlers.AddPlatformHandler"
            commandId="org.polarsys.time4sys.arinc653.editor.commands.AddPlatformCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.polarsys.time4sys.arinc653.editor.menus.Arinc653Menu"
               label="Arinc653"
               mnemonic="6">
            <command
                  commandId="org.polarsys.time4sys.arinc653.editor.commands.AddPartitionCommand"
                  id="org.polarsys.time4sys.arinc653.editor.menus.AddPartitionCommand"
                  mnemonic="P">
                  <visibleWhen>
				<with
				  variable="activeMenuSelection">
				  <iterate>
				    <or>
				      <adapt type="org.polarsys.time4sys.marte.hrm.HardwareProcessor"></adapt>
				    </or>
				  </iterate>
				</with>
				  </visibleWhen>
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.polarsys.time4sys.arinc653.editor.menus.Arinc653Menu"
               label="Arinc653"
               mnemonic="6">
            <command
                  commandId="org.polarsys.time4sys.arinc653.editor.commands.AddPlatformCommand"
                  id="org.polarsys.time4sys.arinc653.editor.menus.AddPlatformCommand"
                  mnemonic="I">
                  <visibleWhen>
				<with
				  variable="activeMenuSelection">
				  <iterate>
				    <or>
				      <adapt type="org.polarsys.time4sys.design.DesignModel"></adapt>
				      <adapt type="org.polarsys.time4sys.marte.grm.ResourcePackage"></adapt>
				    </or>
				  </iterate>
				</with>
				  </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
